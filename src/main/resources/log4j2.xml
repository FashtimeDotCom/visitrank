<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" name="UrlPersistor">

	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<Layout type="PatternLayout" pattern="%m MDC%X%n" />
		</Console>
		<File name="MyFile" fileName="logs/app.log">
			<PatternLayout>
				<Pattern>
					%m%n
				</Pattern>
			</PatternLayout>
		</File>
	</Appenders>

	<Loggers>
		<Logger name="UrlPersistor" level="warn" additivity="false">
			<AppenderRef ref="MyFile" />
		</Logger>

		<Root level="error">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>

</Configuration>